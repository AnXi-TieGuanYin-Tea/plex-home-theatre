<!-- Mappings for the Motorola Nyxboard remote -->
<keymap>
  <global>
    <keyboard>
      <home>XBMC.ActivateWindow(Home)</home>
      <f3>OSD</f3>         <!-- EPG: same as Guide (ctrl-G) on MCE remote -->
      <f3 mod="shift">Plex.ActivateWindow(10051)</f3>    <!-- Red -->
      <f4 mod="shift">XBMC.ActivateWindow(Home)</f4>    <!-- Green -->
      <f5 mod="shift"></f5> <!-- Yellow -->
      <f6 mod="shift">PreviousMenu</f6> <!-- Blue -->
      <f4>ContextMenu</f4>                          <!-- User button -->
    </keyboard>
  </global>
</keymap>

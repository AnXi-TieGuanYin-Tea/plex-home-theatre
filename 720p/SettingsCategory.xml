<?xml version="1.0"?>
<window id="12">
	<defaultcontrol>3</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<backgroundcolor>black</backgroundcolor>
	<controls>
		<!-- bg's -->
		<!--><include>SlideshowDimmed</include>-->
		<control type="multiimage">
			<include>FullScreenScaled</include>
			<timeperimage>8000</timeperimage>
			<fadetime>1000</fadetime>
			<randomize>true</randomize>
			<loop>yes</loop>
			<imagepath background="true">http://localhost:32400/library/arts</imagepath>
			<animation effect="fade" end="20" time="400" condition="true">Conditional</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="800"/>
			</animation>
		</control>
		<control type="image">
			<width>1280</width>
			<height>720</height>
			<texture>bg-overlay-grainy.png</texture>
			<aspectratio>stretch</aspectratio>
			<animation effect="fade" start="0" end="100" time="0" condition="true">Conditional</animation>
			<visible>true</visible>
		</control>
		<control type="group">
			<posx>45</posx>
			<include>SettingsBG</include>
			<!-- settings menu (left) -->
			<include>SettingsMenu</include>		
			<!-- setting options (right) -->
			<include>SettingOptions</include>
		</control>
		<!-- top-level ui (LeftSidemenu.xml & IncludesGlobals.xml & Debug.xml) -->
		<include>LeftSideMenuSettings</include>
		<!--<include>TopBar</include>-->
		<include>debugInfos</include>
		<include>Grid</include>
		<include>WindowFade</include>
	</controls>
</window>

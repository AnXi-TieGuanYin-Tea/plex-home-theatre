<?xml version="1.0"?>
<window id="4999">
	<defaultcontrol always="true">110</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<!-- header title & description text -->
		<control type="group">
			<posx>60</posx>
			<posy>60</posy>
			<width>1160</width>
			<!-- header title -->
			<control type="label" id="1">
				<description>Heading</description>
				<width>1160</width>
				<include>DialogHeading</include>
				<label>Plex first startup Helper</label>
			</control>
		</control>
		<!-- audio connector selection assets -->
		<control type="group" id="100">
			<posx>100</posx>
			<posy>120</posy>
			<width>750</width>
			<!-- description text -->
			<control type="textbox" id="2">
				<posy>0</posy>
				<posx>20</posx>
				<width>1050</width>
				<height>140</height>
				<align>left</align>
				<font>PINdescription</font>
				<label>Now, let's set up your audio connection. Look at the images in the list below and choose either HDMI or Optical depending on your setup. Please verify that it is the correct one or your audio might not work correctly. If in doubt, or you're unable to verify your connection, choose neither (and press "Next") and we'll default to 2 channel audio. It will work just fine, and you can always change this setting later in the Preferences to take full advantage of your setup.</label>
			</control>
			<control type="group">
				<posy>170</posy>
				<!-- audio connector images -->
				<control type="group">
					<posx>0</posx>
					<posy>0</posy>
					<control type="image">
						<description>hdmi</description>
						<width>290</width>
						<height>130</height>
						<texture>hdmi.jpg</texture>
						<aspectratio scalediffuse="false" align="center">keep</aspectratio>
					</control>
					<control type="image">
						<description>optical</description>
						<posy>150</posy>
						<width>290</width>
						<height>130</height>
						<texture>optical.jpg</texture>
						<aspectratio scalediffuse="false" align="center">keep</aspectratio>
					</control>
				</control>
				<!-- audio connector selection list -->
				<control type="grouplist" id="110">
					<posx>290</posx>
					<posy>0</posy>
					<width>790</width>
					<height>400</height>
					<onup>110</onup>
					<ondown>120</ondown>
					<onleft>-</onleft>
					<onright>-</onright>
					<itemgap>20</itemgap>
					<control type="radiobutton" id="1">
						<width>770</width>
						<height>130</height>
						<textoffsetx>20</textoffsetx>
						<label>HDMI Audio Connection</label>
					</control>
					<control type="radiobutton" id="2">
						<width>770</width>
						<height>130</height>
						<textoffsetx>20</textoffsetx>
						<label>Optical Audio Connection</label>
					</control>
				</control>
				<!--><control type="radiobutton" id="111">
				<width>770</width>
				<height>130</height>
				<textoffsetx>20</textoffsetx>
			</control>-->
			</control>
		</control>
		<!-- buttons area -->
		<control type="group">
			<posy>600</posy>
			<posx>0</posx>
			<control type="group">
				<control type="image">
					<description>button bg</description>
					<posx>0</posx>
					<width>1280</width>
					<height>80</height>
					<include>Orange</include>
					<animation effect="fade" start="0" end="20" time="0" condition="true">Conditional</animation>
				</control>
			</control>
			<control type="group" id="120">
				<posy>15</posy>
				<posx>240r</posx>
				<control type="button" id="121">
					<description>Button</description>
					<width>120</width>
					<onleft>-</onleft>
					<onright>-</onright>
					<onup>110</onup>
					<label>Next</label>
					<include>DialogPressButton</include>
				</control>
			</control>
		</control>
		<!-- top-level ui (LeftSidemenu.xml & IncludesGlobals.xml & Debug.xml) -->
		<include>Grid</include>
		<include>WindowFade</include>
	</controls>
</window>

				<posy>9</posy>
				<width>390</width>
				<height>390</height>
				<texture>default-square-big.png</texture>
			</control>
			<control type="image">
				<posx>9</posx>
				<posy>9</posy>
				<width>390</width>
				<height>390</height>
				<texture diffuse="mask-square-big.png">$INFO[MusicPlayer.Cover]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>

	<include name="NextInfo">
		<control type="label">
			<width>800</width>
			<font>CondensedBold-22</font>
			<textcolor>orange</textcolor>
			<label>$INFO[MusicPlayer.Offset(1).Artist]</label>
			<align>right</align>
			<shadowcolor>ff222222</shadowcolor>
		</control>
		<control type="label">
			<posy>53</posy>
			<width>800</width>
			<font>Condensed-22</font>
			<textcolor>greyLighter</textcolor>
			<label>$INFO[MusicPlayer.Offset(1).Title]</label>
			<align>right</align>
			<shadowcolor>ff222222</shadowcolor>
		</control>
		<control type="label">
			<posy>100</posy>
			<width>800</width>
			<font>CondensedBold-22</font>
			<textcolor>greyLighter</textcolor>
			<label>$INFO[MusicPlayer.Offset(1).Album]</label>
			<align>right</align>
			<shadowcolor>ff222222</shadowcolor>
		</control>
	</include>
	<include name="CurrentInfoFlipped">
		<control type="label">
			<posy>5</posy>
			<width>800</width>
			<font>CondensedBold-30</font>
			<textcolor>orange</textcolor>
			<label>$INFO[MusicPlayer.Artist]</label>
			<align>right</align>
			<shadowcolor>ff222222</shadowcolor>
		</control>
		<control type="label">
			<posy>75</posy>
			<width>800</width>
			<font>Condensed-24</font>
			<textcolor>greyLighter</textcolor>
			<label>$INFO[MusicPlayer.Album]</label>
			<align>right</align>
			<shadowcolor>ff222222</shadowcolor>
		</control>
		<control type="label">
			<posy>165</posy>
			<width>800</width>
			<font>CondensedBold-30</font>
			<textcolor>FF888888</textcolor>
			<label>$INFO[MusicPlayer.Title]</label>
			<align>right</align>
			<shadowcolor>ff222222</shadowcolor>
		</control>
		<control type="label">
			<posy>275</posy>
			<posx>-795</posx>
			<width>500</width>
			<textcolor>greyLighter</textcolor>
			<font>Condensed-24</font>
			<label>$INFO[MusicPlayer.Time]</label>
			<shadowcolor>ff222222</shadowcolor>
		</control>
		<control type="label">
			<posy>350</posy>
			<width>500</width>
			<textcolor>greyLighter</textcolor>
			<font>Condensed-24</font>
			<label>$INFO[MusicPlayer.Duration]</label>
			<align>right</align>
			<shadowcolor>ff222222</shadowcolor>
		</control>
	</include>
	<include name="NextInfoFlipped">
		<control type="label">
			<width>800</width>
			<font>CondensedBold-22</font>
			<textcolor>orange</textcolor>
			<label>$INFO[MusicPlayer.Offset(1).Artist]</label>
			<shadowcolor>ff222222</shadowcolor>
		</control>
		<control type="label">
			<posy>53</posy>
			<width>800</width>
			<font>Condensed-22</font>
			<textcolor>greyLighter</textcolor>
			<label>$INFO[MusicPlayer.Offset(1).Title]</label>
			<shadowcolor>ff222222</shadowcolor>
		</control>
		<control type="label">
			<posy>100</posy>
			<width>800</width>
			<font>CondensedBold-22</font>
			<textcolor>greyLighter</textcolor>
			<label>$INFO[MusicPlayer.Offset(1).Album]</label>
			<shadowcolor>ff222222</shadowcolor>
		</control>
	</include>
	<include name="PauseIcon">
		<control type="group">
			<control type="image">
				<posy>30</posy>
				<width>30</width>
				<height>100</height>
				<texture>base.png</texture>
				<aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
				<animation effect="fade" end="80" condition="true">Conditional</animation>
			</control>
			<control type="image">
				<posx>50</posx>
				<posy>30</posy>
				<width>30</width>
				<height>100</height>
				<texture>base.png</texture>
				<aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
				<animation effect="fade" end="80" condition="true">Conditional</animation>
			</control>
		</control>
	</include>
	<!-- Animations -->
	<include name="Fade">
		<animation effect="fade" start="100" end="0" time="500">Hidden</animation>
		<animation effect="fade" start="0" end="100" time="500" delay="200">Visible</animation>
	</include>
	<include name="Slide">
		<animation effect="slide" start="0,-130" time="1000" delay="0" tween="cubic" easing="in" reversible="false">Visible</animation>
	</include>
	<include name="Flip">
		<animation effect="rotatey" center="640" start="0" end="-90" time="500" reversible="false">Hidden</animation>
		<animation effect="rotatey" center="640" start="-90" end="0" time="500" delay="500" reversible="false">Visible</animation>
	</include>
	<include name="NowPlaying">
		<control type="largeimage">
			<include>FullScreenScaled</include>
			<texture>$INFO[Player.Art(fanart)]</texture>
			<include>BackgroundFade</include>
			<animation effect="fade" end="70" time="0" condition="true">conditional</animation>
		</control>
		<!-- backup bg -->
		<control type="image">
			<posy>-22</posy>
			<posx>0</posx>
			<width>1280</width>
			<height>742</height>
			<texture>plex.png</texture>
			<aspectratio>keep</aspectratio>
			<animation effect="fade" start="0" end="10" time="0" condition="true">Conditional</animation>
			<visible>IsEmpty(Player.Art(fanart))</visible>
		</control>
		<!-- Fanart grainy overlay -->
		<control type="image">
			<width>1280</width>
			<height>720</height>
			<texture>bg-overlay-grainy.png</texture>
			<aspectratio>stretch</aspectratio>
			<animation effect="fade" start="0" end="70" time="0" condition="true">Conditional</animation>
			<visible>true</visible>
		</control>
		<!-- not flipped -->
		<control type="group">
			<visible>!MusicPlayer.NowPlayingFlipped</visible>
			<include>Flip</include>
			<include>Fade</include>
			<posx>20</posx>
			<posy>20</posy>
			<!-- 2 cover view -->
			<control type="group">
				<visible>MusicPlayer.HasNext</visible>
				<include>CurrentCover</include>
				<control type="group">
					<posy>25</posy>
					<posx>430</posx>
					<include>CurrentInfo</include>
				</control>
				<control type="progress">
					<posx>425</posx>
					<posy>325</posy>
					<width>820</width>
					<height>26</height>
					<aligny>center</aligny>
					<info>Player.Progress</info>
					<texturebg border="13">OSDProgressBack.png</texturebg>
					<midtexture border="13">OSDProgressMid.png</midtexture>
				</control>
				<control type="group">
					<posx>990</posx>
					<posy>430</posy>
					<include>NextCover</include>
				</control>
				<control type="group">
					<posx>970</posx>
					<posy>530</posy>
					<include>NextInfo</include>
				</control>
			</control>
			<!-- single cover view -->
			<control type="group">
				<posy>130</posy>
				<visible>!MusicPlayer.HasNext</visible>
				<include>Slide</include>
				<include>CurrentCover</include>
				<control type="group">
					<posy>25</posy>
					<posx>430</posx>
					<include>CurrentInfo</include>
				</control>
				<control type="progress">
					<posx>425</posx>
					<posy>325</posy>
					<width>820</width>
					<height>26</height>
					<aligny>center</aligny>
					<info>Player.Progress</info>
					<texturebg border="13">OSDProgressBack.png</texturebg>
					<midtexture border="13">OSDProgressMid.png</midtexture>
				</control>
			</control>
		</control>
		<!-- flipped -->
		<control type="group">
			<visible>MusicPlayer.NowPlayingFlipped</visible>
			<include>Flip</include>
			<include>Fade</include>
			<posx>20</posx>
			<posy>20</posy>
			<!-- 2 cover view -->
			<control type="group">
				<visible>MusicPlayer.HasNext</visible>
				<control type="group">
					<posy>5</posy>
					<posx>830</posx>
					<include>CurrentCover</include>
				</control>
				<control type="group">
					<posy>25</posy>
					<posx>800</posx>
					<include>CurrentInfoFlipped</include>
				</control>
				<control type="progress">
					<posy>325</posy>
					<height>26</height>
					<width>820</width>
					<aligny>center</aligny>
					<info>Player.Progress</info>
					<texturebg border="13">OSDProgressBack.png</texturebg>
					<midtexture border="13">OSDProgressMid.png</midtexture>
				</control>
				<control type="group">
					<posx>0</posx>
					<posy>430</posy>
					<include>NextCover</include>
				</control>
				<control type="group">
					<posx>260</posx>
					<posy>530</posy>
					<include>NextInfoFlipped</include>
				</control>
			</control>
			<!-- single cover view -->
			<control type="group">
				<posy>130</posy>
				<visible>!MusicPlayer.HasNext</visible>
				<include>Slide</include>
				<control type="group">
					<posy>5</posy>
					<posx>830</posx>
					<include>CurrentCover</include>
				</control>
				<control type="group">
					<posy>25</posy>
					<posx>800</posx>
					<include>CurrentInfoFlipped</include>
				</control>
				<control type="progress">
					<posy>325</posy>
					<height>26</height>
					<width>820</width>
					<aligny>center</aligny>
					<info>Player.Progress</info>
					<texturebg border="13">OSDProgressBack.png</texturebg>
					<midtexture border="13">OSDProgressMid.png</midtexture>
				</control>
			</control>
		</control>
		<!-- paused -->
		<control type="group">
			<visible>Player.Paused</visible>
			<animation effect="fade" end="100" time="1000">Visible</animation>
			<animation effect="fade" end="0" time="500">Hidden</animation>
			<control type="group">
				<posx>1170</posx>
				<visible>!MusicPlayer.NowPlayingFlipped</visible>
				<include>PauseIcon</include>
			</control>
			<control type="group">
				<posx>30</posx>
				<visible>MusicPlayer.NowPlayingFlipped</visible>
				<include>PauseIcon</include>
			</control>
		</control>
	</include>
</includes>

			</control>
			<control type="image">
				<posx>9</posx>
				<posy>9</posy>
				<width>230</width>
				<height>230</height>
				<texture diffuse="mask-square.png">$INFO[MusicPlayer.Offset(1).Cover]</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>

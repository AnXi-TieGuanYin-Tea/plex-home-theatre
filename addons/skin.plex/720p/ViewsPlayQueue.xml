<?xml version="1.0"?>
<includes>
	<!-- Pre-play Clip -->
	<include name="PlayQueue1">
		<!-- Album Tracks -->
		<control type="group" id="777">
			<posx>-54</posx>
			<posy>-34</posy>
			<!-- backgrounds & plot -->
			<control type="group">
				<!-- backgrounds -->
				<control type="group">
					<include>MusicPlotBG</include>
					<include>MusicRightBG</include>
				</control>
				<!-- artist thumb -->
				<control type="group">
					<posx>155</posx>
					<posy>62</posy>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>300</width>
						<height>300</height>
						<include>Shadow</include>
					</control>
					<control type="image">
						<description>Poster image</description>
						<posx>13</posx>
						<posy>13</posy>
						<width>274</width>
						<height>274</height>
						<texture background="true" diffuse="mask-square.png">$INFO[ListItem.Art(thumb)]</texture>
						<aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
					</control>
					<!-- show fanart if track has no thumb -->
					<control type="image">
						<description>Poster image</description>
						<posx>13</posx>
						<posy>13</posy>
						<width>274</width>
						<height>274</height>
						<texture background="true" diffuse="mask-square.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
						<aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
						<visible>IsEmpty(ListItem.Art(thumb))</visible>
					</control>
				</control>
				<!-- plot text -->
				<control type="textbox">
					<posx>169</posx>
					<posy>412</posy>
					<width>596</width>
					<height>246</height>
					<include>PlotFormat</include>
					<label>$INFO[Container.Property(summary)]</label>
				</control>
				<control type="textbox">
					<posx>169</posx>
					<posy>420</posy>
					<width>596</width>
					<height>246</height>
					<include>PlotFormat</include>
					<include>NoPlotDefault</include>
					<visible>IsEmpty(Container.Property(summary))</visible>
				</control>
			</control>
			<!-- Infos Left -->
			<control type="group">
				<visible>Control.IsVisible(54)</visible>
				<posy>70</posy>
				<posx>468</posx>
				<!-- Titles -->
				<control type="label">
					<width>296</width>
					<height>40</height>
					<label>$INFO[ListItem.Artist]</label>
					<font>Bold-36</font>
					<include>WhiteShadow</include>
					<visible>true</visible>
				</control>
				<control type="label">
					<posy>40</posy>
					<width>296</width>
					<height>40</height>
					<label>$INFO[ListItem.Album]</label>
					<font>Bold-36</font>
					<include>Grey1</include>
					<visible>true</visible>
				</control>
				<!-- Count -->
				<control type="grouplist">
					<posy>93</posy>
					<orientation>horizontal</orientation>
					<itemgap>10</itemgap>
					<control type="label">
						<width min="29" max="296">auto</width>
						<height>20</height>
						<label>$VAR[TopBarItemCountStrings]</label>
						<font>Regular-18</font>
						<include>WhiteShadow</include>
						<visible>true</visible>
					</control>
				</control>
				<!-- Unavailable indicator -->
				<include>UnavailableIndicator</include>
			</control>
			<!-- list -->
			<control type="list" id="54">
				<viewtype label="MusicLibraryAlbumTracks">list</viewtype>
				<posx>794</posx>
				<posy>55</posy>
				<width>520</width>
				<height>650</height>
				<scrolltime>200</scrolltime>
				<pagecontrol>61</pagecontrol>
				<onleft>998</onleft>
				<onright>Container.NextViewMode</onright>
				<onup>54</onup>
				<ondown>54</ondown>
				<itemlayout height="49" width="520">
					<control type="image">
						<posx>20</posx>
						<posy>0</posy>
						<width>600</width>
						<height>50</height>
						<texture>border-bottom-grey.png</texture>
					</control>
					<control type="label">
						<posx>35</posx>
						<width>434</width>
						<height>50</height>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<font>Regular-17</font>
						<include>White2</include>
					</control>
					<control type="label">
						<posx>505</posx>
						<width>120</width>
						<height>50</height>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.DurationStr]</label>
						<font>Regular-17</font>
						<include>White2</include>
					</control>
				</itemlayout>
				<focusedlayout height="49" width="520">
					<control type="image">
						<posx>20</posx>
						<posy>0</posy>
						<width>565</width>
						<height>50</height>
						<texture aspectratio="stretch">black.png</texture>
						<animation effect="slide" start="0,-42" end="0,0" time="200" reversible="false" tween="quadratic" easing="out" condition="Container.OnNext">focus</animation>
						<animation effect="slide" start="0,42" end="0,0" time="200" reversible="false" tween="quadratic" easing="out" condition="Container.OnPrevious">focus</animation>
					</control>
					<control type="label">
						<posx>35</posx>
						<width>434</width>
						<height>50</height>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<font>Bold-17</font>
						<scroll>true</scroll>
						<animation effect="fade" start="0" end="100" time="100" delay="50" reversible="false" condition="Container.OnNext">Focus</animation>
						<animation effect="fade" start="0" end="100" time="100" delay="50" reversible="false" condition="Container.OnPrevious">Focus</animation>
						<textcolor>orangeLight</textcolor>
					</control>
					<control type="label">
						<posx>505</posx>
						<width>120</width>
						<height>50</height>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.DurationStr]</label>
						<font>Bold-17</font>
						<textcolor>orangeLight</textcolor>
						<animation effect="fade" start="0" end="100" time="100" delay="50" reversible="false" condition="Container.OnNext">Focus</animation>
						<animation effect="fade" start="0" end="100" time="100" delay="50" reversible="false" condition="Container.OnPrevious">Focus</animation>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>
